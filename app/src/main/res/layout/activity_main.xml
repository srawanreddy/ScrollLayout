<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    tools:context="com.example.sravanreddy.scrollviewer.MainActivity">
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/article_subtitle">

    <TextView
        android:id="@+id/article_textview"
        android:autoLink="web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/article_subtitle"
        android:layout_marginTop="39dp"
        android:text="@string/article_text"
        android:textColor="@color/text_color"
        android:textSize="@dimen/article_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>
    <TextView
        android:id="@+id/article_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:layout_marginTop="0dp"
        android:text="@string/article_header"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_header" />

    <TextView
        android:id="@+id/article_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/article_header"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:text="@string/article_subtitle"
        android:textColor="@color/text_color"
        android:textSize="@dimen/subtitle_size" />

</RelativeLayout>
